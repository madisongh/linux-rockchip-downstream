	status = "okay"; 
	gpio = <&pca9555 PCA_IO0_4 GPIO_ACTIVE_HIGH>;  //PCA_IO 04
};

&vcc_hub3_reset{
	status = "okay";
	compatible = "regulator-fixed-firefly";
	regulator-name = "vcc_hub3_reset";
