	regulator-always-on;
	regulator-fixed-kernel-reset-ms = <3000>;
	gpio = <&pca9555 PCA_IO0_6 GPIO_ACTIVE_HIGH>;  //PCA_IO 06
};

&vcc5v0_host3{
	gpio = <&pca9555 PCA_IO0_7 GPIO_ACTIVE_HIGH>;  //PCA_IO 07
